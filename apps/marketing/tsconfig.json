{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Next.js injects its own React types â€“ include them here
    "types": [
      "next",
      "node"
    ],
    "module": "NodeNext",
    // Keep JSX transform for Next (noEmit is inherited)
    "jsx": "preserve",
    /* If you set up an alias like `@/` in the root, point it here too */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "incremental": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  // Next.js needs these dirs to compile, no others.
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
